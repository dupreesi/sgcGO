<div class="board_container">

  <section class="board" id="board--stop">
    <h2>STOP</h2>
    <img src="image/stop.svg" alt="stop sign" class="board_symbol">
    <ul>
      {{#each stop}}
      <li>{{this.text_content}}</li>
      {{/each}}
    </ul>
  </section>

  <section class="board" id="board--go">
    <h2>GO</h2>
    <img src="image/go.svg" alt="go sign" class="board_symbol">
    <ul>
      {{#each go}}
      <li>{{this.text_content}}</li>
      {{/each}}
    </ul>
  </section>

  <section class="board" id="board--continue">
    <h2>CONTINUE</h2>
    <img src="image/continue.svg" alt="continue sign" class="board_symbol">
    <ul>
      {{#each cont}}
      <li>{{this.text_content}}</li>
      {{/each}}
    </ul>
  </section>

</div>

<footer id="add_topic">
  <button class="drawer-button" id="drawerButton">&plus;</button>
  <form action="/add" method="POST">

    <input name="board_id" type="hidden" value="{{ name }}">

    <input name="topic" type="text" id="new_topic" placeholder="Add a new topic..." autocomplete="off" required>

    <div role="presentation" id="radio-container">
      <label class="container">Stop
        <input type="radio" checked="checked" name="sgc" value="1">
        <span class="checkmark checkmark--red"></span>
      </label>

      <label class="container">Go
        <input type="radio" name="sgc" value="2">
        <span class="checkmark checkmark--green"></span>
      </label>

      <label class="container">Continue
        <input type="radio" name="sgc" value="3">
        <span class="checkmark checkmark--blue"></span>
      </label>
    </div>

    <button type="submit" id="submit-topic'">Submit topic</button>

  </form>
</footer>